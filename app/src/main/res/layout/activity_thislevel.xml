<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 工具列：最上面 -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flexDirection="column">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <!-- 黑色背景條 -->
            <View
                android:id="@+id/thislevel_querycolor_v"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/thislevel_back_ibtn"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="返回上一頁"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="45dp"
                android:src="@drawable/u154"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/thislevel_query_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="進度表查詢"
                app:layout_constraintBottom_toBottomOf="@+id/thislevel_querycolor_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 大頭貼 -->
            <ImageView
                android:id="@+id/thislevel_avatar_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/u8"
                app:layout_constraintEnd_toStartOf="@id/thislevel_username_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"/>

            <!-- 圓圈 -->
            <ImageView
                android:id="@+id/thislevel_badge_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/u9"
                app:layout_constraintEnd_toStartOf="@id/thislevel_username_tv"
                app:layout_constraintTop_toTopOf="@id/thislevel_avatar_iv"
                android:translationX="-13dp"
                android:translationY="6dp"
                />

            <!-- 使用者名稱 -->
            <TextView
                android:id="@+id/thislevel_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="羅正修"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flexDirection="column">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <!-- 黑色背景條 -->
            <View
                android:id="@+id/thislevel_textcolor_v"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/thislevel_number_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#008000"
                            android:text="1MO1812040031" />

                        <TextView
                            android:id="@+id/thislevel_number2_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="1SO1811270009" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/thislevel_number3_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:textColor="#008000"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="F260011ATN-2" />

                        <TextView
                            android:id="@+id/thislevel_number4_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.3"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="ATN260011  系統櫃(垃圾筒) -抽屜+垃圾筒固定片*4pcs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/thislevel_time_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="預計上線：2018-12-06" />

                        <TextView
                            android:id="@+id/thislevel_sum_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="生產數量：3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/thislevel_time_start_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="計劃開始：08:00" />

                        <TextView
                            android:id="@+id/thislevel_time_end_tv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:text="計劃結束：08:05" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/thislevel_group_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#008000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="一群-點焊" />

                    <TextView
                        android:id="@+id/thislevel_status_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textColor="#008000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="生效" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/thislevel_qianguan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/thislevel_button"
                        android:textColor="@drawable/button_text_selector"
                        android:backgroundTint="@null"
                        android:text="Button" />

                    <Button
                        android:id="@+id/thislevel_thislevel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/thislevel_button"
                        android:textColor="@drawable/button_text_selector"
                        android:backgroundTint="@null"
                        android:text="Button" />

                    <Button
                        android:id="@+id/thislevel_houguan_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/thislevel_button"
                        android:textColor="@drawable/button_text_selector"
                        android:backgroundTint="@null"
                        android:text="Button" />

                    <Button
                        android:id="@+id/thislevel_assembly_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/thislevel_button"
                        android:textColor="@drawable/button_text_selector"
                        android:backgroundTint="@null"
                        android:text="Button" />

                    <Button
                        android:id="@+id/thislevel_sale_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/thislevel_button"
                        android:textColor="@drawable/button_text_selector"
                        android:backgroundTint="@null"
                        android:text="Button" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>