<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 工具列：最上面 -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flexDirection="column">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 黑色背景條 -->
            <View
                android:id="@+id/query_querycolor_v"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/query_back_ibtn"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="返回上一頁"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_marginStart="45dp"
                android:src="@drawable/u154"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/query_query_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="進度表查詢"
                app:layout_constraintBottom_toBottomOf="@+id/query_querycolor_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 大頭貼 -->
            <ImageView
                android:id="@+id/query_avatar_iv"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/u8"
                app:layout_constraintEnd_toStartOf="@id/query_username_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"/>

            <!-- 圓圈 -->
            <ImageView
                android:id="@+id/query_badge_iv"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/u9"
                app:layout_constraintEnd_toStartOf="@id/query_username_tv"
                app:layout_constraintTop_toTopOf="@id/query_avatar_iv"
                android:translationX="-16dp"/>

            <!-- 使用者名稱 -->
            <TextView
                android:id="@+id/query_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="羅正修"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <!-- 主內容區 -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flexDirection="column">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:flexDirection="row"
            app:alignItems="center">

            <TextView
                android:id="@+id/query_process_tv"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                android:text="製程別" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.aps_true.ui.query.QuerySpinner
                    android:id="@+id/query_process_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="85dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:dropDownVerticalOffset="50dp"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/process_button" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:rotation="270"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/query_process_spinner"
                    app:srcCompat="@drawable/outline_arrow_back_ios_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:flexDirection="row"
            app:alignItems="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/query_date_tv"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                android:text="上線日期" />

            <EditText
                android:id="@+id/query_date_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                app:layout_flexGrow="1"/>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="65dp"
                android:layout_height="54dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/query_button"
                app:flexDirection="row"
                app:alignItems="center">

                <Button
                    android:id="@+id/query_date_btn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/query_button"
                    app:backgroundTint="@android:color/white"
                    android:textColor="@color/black"
                    android:text="..."/>

            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:flexDirection="row"
            app:alignItems="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/query_order_number_tv"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                android:text="訂單單號" />

            <EditText
                android:id="@+id/query_order_number_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                app:layout_flexGrow="1"/>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="65dp"
                android:layout_height="54dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/query_button"
                app:flexDirection="row"
                app:alignItems="center">

                <Button
                    android:id="@+id/query_order_number_btn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="1dp"
                    app:backgroundTint="@android:color/white"
                    android:background="@drawable/query_button"
                    android:textColor="@color/black"
                    android:text="..."/>

            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:flexDirection="row"
            app:alignItems="center">

            <TextView
                android:id="@+id/query_client_tv"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                android:text="客戶" />

            <EditText
                android:id="@+id/query_client_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                app:layout_flexGrow="1"/>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="65dp"
                android:layout_height="56dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/query_button"
                app:flexDirection="row"
                app:alignItems="center">

                <Button
                    android:id="@+id/query_client_btn"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    app:backgroundTint="@android:color/white"
                    android:background="@drawable/query_button"
                    android:textColor="@color/black"
                    android:text="..."/>

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <!-- 最底下的view：LinearLayout包著 ConstraintLayout -->
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/query_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="確定"
            android:background="@drawable/checkbutton"
            app:backgroundTint="@android:color/holo_red_light"
            tools:layout_editor_absoluteX="192dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>