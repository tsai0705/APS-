<resources>
    <!-- 灰底 -->
    <style name="GrayBackground">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#BEBEBE</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!-- 黑色分隔線 -->
    <style name="DividerLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!-- 虛線水平 -->
    <style name="DashedLineHorizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/dashed_line</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!-- 虛線垂直 -->
    <style name="DashedLineVertical">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/dashed_line</item>
    </style>
</resources>
