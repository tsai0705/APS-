<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">

    <stroke
        android:width="2dp"
        android:color="@color/grey"
        android:dashWidth="5dp"
        android:dashGap="3dp" />
</shape>

    <!-- width:線條的寬度（粗細），單位是 dp -->
    <!-- dashWidth:每一段實線的長度（單位 dp），決定虛線的段長 -->
    <!-- dashGap:每一段空白的長度（單位 dp），決定虛線的間距 -->